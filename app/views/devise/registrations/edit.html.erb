<div class="row justify-content-center">
  <div class="col-12 col-lg-6">
    <h2>Edit user details</h2>

    <%= link_to "Back", :back, class: "link-light" %>

    <h3>Name: <%= current_user.name %></h3>
    <h6>User info:</h6>
    <p><%= current_user.bio %></p>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field mb-3">
        <%= f.label :bio, 'Updated user info', class: "form-label" %>
        <%= f.text_area :bio, class: "form-control", placeholder: "Your bio here...", rows: "5" %>
      </div>

      <div class="field mb-3">
        <%= f.label :password, 'New password', class: "form-label" %><i> (leave blank if you don't want to change it)</i>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        <% if @minimum_password_length %>
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="field mb-3">
        <%= f.label :password_confirmation, 'Confirm new password', class: "form-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="field mb-3">
        <%= f.label :current_password, class: "form-label" %> <i>(we need your current password to confirm your changes)</i>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <div class="actions mb-3 text-center">
        <%= f.submit "Update", class: "btn btn-light" %>
      </div>
    <% end %>
  </div>
</div>
